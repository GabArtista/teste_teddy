{
  "info": {
    "name": "Resume AI Backend",
    "description": "Postman collection for manual testing of the Resume Intelligence API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "00000000-0000-0000-0000-000000000000"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Process Resumes",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "files",
              "type": "file",
              "src": []
            },
            {
              "key": "query",
              "type": "text",
              "value": "Which candidate best fits the Senior Backend Engineer role?"
            },
            {
              "key": "request_id",
              "type": "text",
              "value": "{{requestId}}"
            },
            {
              "key": "user_id",
              "type": "text",
              "value": "fabio.talent@techmatch.io"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/v1/resumes/process",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "resumes",
            "process"
          ]
        }
      },
      "response": []
    },
    {
      "name": "List Audit Logs",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/logs?limit=20",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "v1",
            "logs"
          ],
          "query": [
            {
              "key": "limit",
              "value": "20"
            }
          ]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "requestId",
      "value": "11111111-1111-1111-1111-111111111111"
    }
  ]
}

